{
  "compilerOptions": {
    "baseUrl": "../",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "sourceMap": true,
    "allowJs": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "lib": ["webworker", "es6", "scripthost", "dom"]
  },
  "files": [
    "./src/index.ts"
  ],
  "exclude": [
    "./node_modules"
  ],
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2,
    "convertTabsToSpaces": true
  }
}
